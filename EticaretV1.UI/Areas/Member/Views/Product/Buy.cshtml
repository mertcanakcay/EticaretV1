
@{
    ViewBag.Title = "Buy";
    Layout = "~/Areas/Member/Views/Shared/_Layout.cshtml";
}
@model EticaretV1.UI.Areas.Member.Models.ProductDTO


<form action="/Member/Product/Buy" method="post">
    <div class="form-group">
      <table class="table table-hover">
          <thead>
              <tr>
                  <th>Ürün Seri No</th>
                  <th>Ürün Adı</th>
                  <th>Stok Miktarı</th>
                  <th>Ödenecek Tutar</th>
              </tr>
          </thead>
          <tbody>
              <tr>
                  <td>@Model.Id</td>
                  <td>@Model.Name</td>
                  <td>@Model.UnitsInStock</td>
                  <td>@Model.UnitPrice</td>
              </tr>
          </tbody>
      </table>
    </div>
    @Html.HiddenFor(x => x.Id)
        <input type="submit" value="Satın AL" class="form-control btn btn-primary" />
    
</form>
