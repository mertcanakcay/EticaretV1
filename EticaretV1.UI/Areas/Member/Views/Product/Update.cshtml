
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Member/Views/Shared/_Layout.cshtml";
}

@model EticaretV1.UI.Areas.Member.Models.ProductUpdateDTO


<form action="/Member/Product/Update" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Ürün Adı</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Price">Fiyat</label>
        <input type="text" name="Price" value="@Model.Price" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Quantity">Birim</label>
        <input type="text" name="Quantity" value="@Model.Quantity" class="form-control" />
    </div>

    <div class="form-group">
        <label for="UnitsInStock">Stok Miktarı</label>
        <input type="text" name="UnitsInStock" value="@Model.UnitsInStock" class="form-control" />
    </div>
    <div class="form-group">
        <label for="CategoryID">Kategori Seçiniz</label>
        <select name="CategoryID" class="form-control">
            @foreach (var item in Model.CategoryList)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
   
    
     <div class="form-group">
        <label for="Image">Fotoğraf Seçiniz</label>
        <input type="file" name="Image1" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Image1">İkinci Bir Foto İçin!</label>
        <input type="file" name="Image" class="form-control" />
    </div>
    @Html.HiddenFor(x => x.ProductID)
    <input type="submit" value="Güncelle" class="form-control btn btn-primary" />
</form>

