
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<EticaretV1.Model.Option.Category>

<div class="col-md-12">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Kategori Adı</th>
                <th>Açıklaması</th>
                <th colspan="1">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="/Admin/Category/Update/@item.Id">Güncelle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


