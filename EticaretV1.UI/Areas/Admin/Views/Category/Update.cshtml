
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model EticaretV1.UI.Areas.Admin.Models.CategoryDTO

<form action="/Admin/Category/Update" method="post">
    <div class="form-group">
        <label for="Name">Kategori Adı</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Description">Kategori Açıklaması</label>
        <input type="text" name="Description" value="@Model.Description" class="form-control" />
    </div>
    <input style="visibility:hidden" type="text" name="Id" value="@Model.Id" />
    <input type="submit" value="Güncelle" class="form-control btn btn-primary" />
</form>

